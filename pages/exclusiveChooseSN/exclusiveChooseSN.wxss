 /* 搜索框样式 */
 .manage_search{
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  width: 670rpx;
  height: 80rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  position: relative;
}
.search_view{
  display: flex;
  align-items: center;
  justify-content: center;
  /* width: 100%; */
}

/* 搜索框提示文字样式 */
.search .search_view input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  /* padding-left:30rpx;  */
}
.weui-icon-clear{
  position: absolute;
  right: 30rpx;
  display: flex;
}

#search_checked{
  width: 70%;
