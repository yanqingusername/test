<!--pages/myOrder/myOrder.wxml-->
<cu-custom bgColor="bg-white" isBack="{{false}}" isCustom="{{true}}">
  <view slot="content">我的工单</view>
</cu-custom>
<scroll-view scroll-x class="bg-white nav text-center" style="background-color: #FFF;position:fixed;top:9%;z-index:9999;">
  <view class="cu-item {{index==TabCur?'text-blue cur':''}}" style="border-bottom: none;" wx:for="{{statusList}}" wx:key="index" bindtap="tabSelect" data-id="{{index}}">
      <span >{{statusList[index]}}</span>
      <span >({{orderList.length}})</span>
  </view>
</scroll-view>
<view class="page"> 
    <view class="new_p1">
        <block wx:for="{{orderList}}" wx:key="index">
              <view class="new_p1_view" bindtap="toInfo" data-id="{{item.id}}" data-type="{{item.type}}">
                <view class="new_p2" style="align-items: center;">
                    <view class="new_p2_1">
                        <view class="new_p2_title">装机培训</view>
                        <view class="new_p2_type">派单</view>
                    </view>
                    <view class="new_p2_status">进行中</view>
                </view>

                <view class="new_p2" style="margin-top:30rpx;">
                    <view class="new_p2_gray">客户名称：</view>
                    <view class="new_p2_black">新疆维吾尔族库尔勒市八音郭楞蒙自治州人民医院</view>
                </view>

                <view class="new_p2" style="margin-top:30rpx;">
                    <view class="new_p2_gray">预约时间：</view>
                    <view class="new_p2_black">{{item.time}}</view>
                </view>

                <view class="new_p2" style="margin-top:30rpx;">
                    <view class="new_p2_gray">客户地址：</view>
                    <view class="new_p2_black">{{item.address}}</view>
                </view>

                <view class="new_p2" style="margin-top:30rpx;">
                    <view class="new_p2_gray">工单编号：</view>
                    <view class="new_p2_black">{{item.order_num}}</view>
                </view>

                <view class="new_p2" style="margin-top:30rpx;">
                    <view class="new_p2_gray">技术支持：</view>
                    <view class="new_p2_black">李四</view>
                </view>

                <view class="new_line"></view>

                <view class="new_p3">
                    <!-- <view class="new_p3_2" style="margin-right: 0rpx;">删除</view>
                    <view class="new_p3_2" style="margin-right: 0rpx;">查看详情</view> -->
                    <view class="new_p3_2">关闭工单</view>
                    <view class="new_p3_2">修改工单</view>
                    <view class="new_p3_1">完成服务</view>
                </view>
                 

                
            </view>
        </block>
        
        <view hidden wx:if="{{alreadyChecked==true}}">
            <image class="app_noinfo_img" src="../../image/nodata.png" mode="widthFix"></image>
            <view class="app_noinfo_desc">{{tip}}</view>
        </view>
        <view  wx:if="{{alreadyChecked_temp==true}}">
            <image class="app_noinfo_img" src="../../image/nodata.png" mode="widthFix"></image>
            <view class="app_noinfo_desc">{{tip_temp}}</view>
        </view>
        
    </view>

</view>

