 /* 搜索框样式 */
 .manage_search{
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  width: 670rpx;
  height: 80rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  position: relative;
}

.search_view{
  display: flex;
  align-items: center;
  justify-content: center;
  /* width: 100%; */
}

/* 搜索框提示文字样式 */
.search .search_view input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  /* padding-left:30rpx;  */
}
.weui-icon-clear{
  position: absolute;
  right: 30rpx;
  display: flex;
}

#search_checked{
  width: 70%;
  /* width:340rpx; */
  /* text-align: center; */
}

.container {
  padding: 10px 20px;
  align-content: center;
}

.text-content {
  padding: 10px;
  align-content: center;
  border-bottom: 1rpx solid #F5F5F5;
  background-color: #FFFFFF
}

/*全选checkbox*/
.bottom_1 {
  background-color: #FFFFFF;
  position: fixed;
  bottom: 55rpx;
  left: 40rpx;
}
/*全选文字*/
.bottom_view_1 {
  position: fixed;
  bottom: 59rpx;
  left: 100rpx;
}
/*添加仪器按钮*/
.button-bottom_1 {
  background-color: #FFFFFF;
  color: #1673EC;
  position: fixed;
  bottom: 40rpx;
  left: 215rpx;
  width: 35% !important;
  border: 1rpx solid #1673EC;
}

/*完成按钮*/
.button-bottom_2 {
  background-color: #1673EC;
  color: #FFFFFF;
