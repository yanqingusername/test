.explainType{
    font-size: 34rpx;
    font-weight: bold;
    color: rgba(36, 30, 30, 1);
    line-height: 1.5;
    display: flex;
    align-items: center;
    margin: 0rpx 40rpx;
}

.details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40rpx;
    width: 100%;
}

.cancel {
    width: 50%;
    height: 88rpx;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: #666666;
    border-top: 1px solid #E9E9E9;
    border-right: 1px solid #E9E9E9;
    line-height: 88rpx;
}

.sure {
