.cover {
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 333;
    height: 100vh;
    background-color: rgba(0, 0, 0, .7);
    display: flex;
    justify-content: center;
    align-items: center;

}

.concent {
    width: 590rpx;
    background-color: #ffffff;
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 60rpx 0rpx 0rpx;
    position: relative;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
    line-height: 1.5;
    width: 80%;
    text-align: center;
}

.explain {
    font-size: 28rpx;
    color: #666666;
    line-height: 1.5;
    display: flex;
    align-items: center;
    margin: 40rpx 70rpx 0rpx;
    justify-content: center;
    text-align: center;
}

